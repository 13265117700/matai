@import '../comment/comment.wxss';

.abs-table .top .times {
  position: absolute;
  right: 30rpx;
}

.abs-table .content {
  padding: 0 30rpx;
  background-color: #fff;
}

.abs-table .content .t1 {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #DCDCDC;
}

.abs-table .content .t1 .img {
  width: 200rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.abs-table .content .t1 .price {
  color: #00d1d3;
}

.abs-table .content .t1 .price .t {
  font-size: 36rpx;
}

.abs-table .content .t1 .text {
  color: #71767A;
}

.abs-table .content .t2 {
  padding: 30rpx;
  color: #71767A;
  font-size: 28rpx;
  border-bottom: 1px solid #DCDCDC;
}

.t3 {
  margin: 20rpx 0;
}

.t3 .title {
  font-size: 28rpx;
  color: #191919;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.t3 .types {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.t3 .types .btn {
  padding: 12rpx 20rpx;
  color: #fff;
  background-color: #F3F3F3;
  border: 1px solid #F3F3F3;
  margin-right: 20rpx;
  line-height: 1;
  border-radius: 25px;
  font-size: 26rpx;
  color: #191919;
}


.t3 .types .btn.active {
  color: #00d1d3;
  border-color: #00d1d3;
  background-color: #fff;
}

.t3 .t3-item2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.t3 .t3-item2 .title {
  margin-bottom: 0;
}

.t3 .t3-item2 .years {
  display: flex;
  align-items: center;
}

.t3 .t3-item2 .years .ma {
  width: 80rpx;
  text-align: center;
  font-size: 48rpx;
  color: #191919;
}

.t3 .t3-item2 .years .ma.dis {
  color: #DCDCDC;
}

.t3 .t3-item2 .years .numbers {
  padding: 10rpx 36rpx;
  color: #191919;
  font-size: 30rpx;
  background-color: #DCDCDC;
  border-radius: 24rpx;
  line-height: 1;
}

/* confirm */
.confirm {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  padding: 30rpx;
}

.confirm .cf-btn {
  padding: 22rpx 0;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
  line-height: 1;
  background: linear-gradient(to right, #00D1D3, #009EBB);
}