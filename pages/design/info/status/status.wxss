page {
  background-color: #f3f3f3;
}

.top {
  height: 280rpx;
  background: #00D1D3;
  position: relative;
}

.top .t1 {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 120rpx;
  color: #fff;
  font-size: 38rpx;
}

.top .t1 .left {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.top .t1 image {
  width: 110rpx;
  height: 110rpx;
}

.top .t1 .right {
  line-height: 1;
}

.top .t1 .right .text2 {
  font-size: 26rpx;
  margin-top: 10rpx;
  line-height: 1.5;
}

.middle {
  position: relative;
  top: -50rpx;
  padding: 0 20rpx;
}

.middle .t1 {
  background-color: #01B8BA;
  height: 20rpx;
  border-radius: 10rpx;
}

.middle .t2 {
  padding: 0 10rpx;
  position: relative;
  top: -10rpx;
}

.middle .t2 .container .bg-top {
  height: 20rpx;
  background-color: rgba(255, 255, 255, .8);
}

.middle .t2 .container {
  background-color: #fff;
  padding: 0 10rpx;
  border-radius: 0 0 20rpx 20rpx;
}

.middle .t2 .price {
  color: #303030;
  padding: 22rpx 0 38rpx;
  line-height: 1;
  font-size: 54rpx;
  text-align: center;
  border-bottom: 1px dashed #BEC1CA;
}

.middle .t2 .price text {
  font-size: 28rpx;
}

.middle .t-sub {
  padding: 20rpx 0;
}

.middle .t-sub .sub-text {
  font-size: 28rpx;
  color: #303030;
  line-height: 1;
  padding: 24rpx 38rpx;
}

.middle .t3 {
  margin-top: 140rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 36rpx;
  color: #545454;
}

.middle .t3>view {
  width: 320rpx;
  text-align: center;
  line-height: 1;
  border: 1px solid #545454;
  padding: 28rpx 0;
  border-radius: 46rpx;
  margin-bottom: 30rpx;
}

.middle .t3 .see-order {
  background-color: #00D1D3;
  color: #fff;
  font-weight: bold;
  border-color: #00D1D3;
}

.fxb {
  position: fixed;
  width: 100%;
  bottom: 48rpx;
  text-align: center;
  color: #191919;
  font-size: 26rpx;
  line-height: 1;
}