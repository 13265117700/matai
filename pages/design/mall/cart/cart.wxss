page {
  background-color: #f4f4f4;
  padding-bottom: 100rpx;
}

.edit {
  background-color: #fff;
  line-height: 1;
  font-size: 30rpx;
  color: #191919;
  text-align: right;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 0 0 20rpx 20rpx;
}

.edit text {
  padding: 20rpx;
}

.item {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  border-radius: 20rpx;
}

.item .select {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.item .cover {
  width: 182rpx;
  height: 182rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  border-radius: 20rpx;
}

.item .info {
  flex: 1;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #191919;
  padding-left: 20rpx;
}

.item .info .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.2;
  margin-bottom: 20rpx;
}

.item .info .price {
  color: #00D1D3;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.select .maru {
  width: 34rpx;
  height: 34rpx;
  background-color: #DDDDDD;
  border-radius: 50%;
}

.select image {
  width: 34rpx;
  height: 34rpx;
  display: none;
}

.select.active image {
  display: block;
}

.select.active .maru {
  display: none;
}


.years {
  display: flex;
  align-items: center;
}

.years .ma {
  width: 80rpx;
  text-align: center;
  font-size: 48rpx;
  color: #191919;
}

.years .ma.dis {
  color: #DCDCDC;
}

.years .numbers {
  padding: 10rpx 20rpx;
  color: #191919;
  font-size: 30rpx;
  background-color: #DCDCDC;
  border-radius: 4rpx;
  line-height: 1;
}


.fx-bottom {
  display: flex;
  height: 100rpx;
  align-items: center;
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  background-color: #fff;
  padding: 10rpx 30rpx;
  justify-content: space-between;

}

.fx-bottom .left {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #545454;
  margin-right: 40rpx;
  padding: 10rpx 0;
}

.fx-bottom .left text {
  margin-left: 10rpx;
}

.fx-bottom .maru {
  width: 34rpx;
  height: 34rpx;
  background-color: #DDDDDD;
  border-radius: 50%;
}

.fx-bottom image {
  width: 34rpx;
  height: 34rpx;
  display: block;
}

.fx-bottom .to-pay {
  padding: 24rpx 72rpx;
  background-color: #00d1d3;
  color: #fff;
  line-height: 1;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.fx-bottom .total-price {
  font-size: 30rpx;
  color: #191919;
}


.fx-bottom .total-price text {
  color: #00d1d3;
}

.to-delete {
  border: 1px solid #BEC1CA;
  font-size: 24rpx;
  line-height: 1;
  padding: 16rpx 32rpx;
  background-color: #fff;
  border-radius: 30rpx;
}

.no-list {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 28rpx;
  color: #505050;
  padding-top: 150px;
}

.no-list image {
  width: 80px;
}

.no-list text {
  margin-top: 50rpx;
}