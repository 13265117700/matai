  border-radius: 32rpx;
  line-height: 1;
}

.set-points .item-set.active {
  background-color: #00d1d3;
  color: #fff;
}

.filter-more-container .ps-box {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  padding: 20rpx 30rpx 20rpx 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.filter-more-container .ps-box .btn {
  line-height: 1;
  font-size: 26rpx;
  border: 1px solid #BEBEBE;
  border-radius: 40rpx;
  padding: 22rpx 100rpx;
  font-weight: bold;
}

.filter-more-container .ps-box .btn.confirm {
  background-image: linear-gradient(to right, #00D1D3, #009EBB);
  border-color: transparent;
  color: #fff;
}

.ps-box .close {
  position: absolute;
  width: 50px;
  height: 100%;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

