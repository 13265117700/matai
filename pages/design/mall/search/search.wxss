/* 筛选 */
.filter {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #191919;
  font-size: 26rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 0 0 20rpx 20rpx;
}

.filter .tab-item {
  position: relative;
  padding-bottom: 10rpx;
  display: flex;
  align-items: center;
  text-align: center;
}

.filter .tab-item::after {
  content: '';
  position: absolute;
  width: 48rpx;
  height: 6rpx;
  background-color: transparent;
  left: 50%;
  margin-left: -24rpx;
  bottom: 0;
  transition: all linear .2s;
}

.filter .tab-item.active {
  font-size: 24rpx;
  font-weight: bold;
}

.filter .tab-item.active::after {
  background-color: #00d1d3;
}

.filter .tab-item .icon {
  width: 20rpx;
  height: 20rpx;
  display: block;
  margin-left: 8rpx;
}

/* 筛选抽屉 */
.filter-more {
  position: fixed;
  width: 100%;
  height: 400px;
  /* js里面设置了 */
  background-color: rgba(0, 0, 0, .1);
  left: 0;
  bottom: 0;
  padding-left: 70rpx;
  transition: all linear .1s;
}

.filter-more.hide {
  left: 100%;
}

.filter-more-container {
  background-color: #f4f4f4;
  height: 100%;
  position: relative;
  padding-bottom: 120rpx;
}

.filter-more-container .row {
  background-color: #fff;
  border-radius: 20rpx;
}

.filter-more-container .row .title {
  color: #191919;
  font-weight: bold;
  font-size: 26rpx;
  padding: 30rpx 0 10rpx;
  text-indent: 1em;
}

.filter-more-container .row .row-item {
  padding: 20rpx 1em;
}

.filter-more-container .row .row-item .filed {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder {
  color: #ccc;
}

.filter-more-container .row .row-item input {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  background-color: #F3F3F3;
  border-radius: 24rpx;
  text-align: center;
  box-sizing: content-box;
}

.filter-more-container .row .row-item .plx {
  margin: 0 10rpx;
  color: #545454;
}

.set-points {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.set-points .item-set {
  padding: 22rpx 30rpx;
  background-color: #F3F3F3;
  color: #191919;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
