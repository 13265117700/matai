page {
  background-color: #F4F4F4;
  padding-bottom: 100rpx;
  width: 100vw;
  overflow-x: hidden !important;
}

.swiper {
  position: relative;
}

.swiper .index {
  position: absolute;
  bottom: 30rpx;
  right: 0;
  padding: 10rpx 22rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 26rpx 0 0 26rpx;
  line-height: 1;
  letter-spacing: 4rpx;
}

.swiper .play-btn {
  position: absolute;
  width: 118rpx;
  height: 118rpx;
  top: 50%;
  margin-top: -59rpx;
  left: 50%;
  margin-left: -59rpx;
}

/* t1 */
.t1 {
  position: relative;
  max-width: 100%;
  overflow-x: hidden !important;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  padding: 20rpx;
}

.t1 .cx {
  position: absolute;
  width: 100%;
  padding: 8rpx 40rpx 8rpx 30rpx;
  z-index: 9;
  top: 0;
  left: 0;
  font-size: 48rpx;
  background-repeat: no-repeat;
  background-position: 0 top;
  background-size: contain;
  background-color: #FFC9A5;
  border-radius: 20rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.t1 .cx .cd {
  font-size: 22rpx;
  color: #FF6600;
  position: relative;
  top: -8rpx;
}

.t1 .cx .cd .nokori {
  margin-bottom: 10rpx;
  text-align: center;
}

.t1 .cx text {
  font-size: 30rpx;
}

.t1 .cx .time {
  color: #FF6600;
  line-height: 1;
}

.t1 .cx .time text {
  padding: 0rpx 4rpx;
  background-color: #FF6600;
  border-radius: 10rpx;
  color: #fff;
}

.t1 .price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 48rpx;
  font-weight: bold;
  letter-spacing: 0;
  color: #00d1d3;
  position: relative;
}

.t1 .price text {
  font-size: 30rpx;
}

.t1 .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #191919;
  padding-right: 70rpx;
}

.t1 .sub-title {
  color: #545454;
  font-size: 24rpx;
}

.share {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  top: 20rpx;
  right: 10rpx;
}

.cuxiao .share {
  top: 82rpx;
}

.share image {
  width: 100%;
  display: block;
}

.t2 {
  border-radius: 20rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.t2 .sales {
  font-size: 28rpx;
  color: #191919;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.t2 .sales text {
  font-size: 28rpx;
  color: #545454;
  margin-left: 50rpx;
  font-weight: normal;
}

.t2 .promise {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #878787;
  font-size: 24rpx;
}

.t2 .promise .p-item {
  display: flex;
  align-items: center;
}

.t2 .promise .p-item image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.details {
  background-color: #ffffff;
  width: 100%;
  overflow-x: hidden !important;
}


/* 底部导航 */
.public-fx-bottom {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  width: 100vw;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 1px solid #d0d0d0;
  padding: 10rpx 0;
}

.public-fx-bottom .fb-left {
  display: flex;
  padding-right: 20rpx;
  align-items: center;
  justify-content: space-between;
}

.fb-left .fb-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx 0;
  font-size: 20rpx;
  color: #222222;
}

.fb-left .fb-item .icon-container {
  width: 34rpx;
}

.fb-left .fb-item .icon-container .d-i {
  width: 100%;
}

.public-fx-bottom .fb-right {
  flex: 1;
  display: flex;
  align-items: center;
  line-height: 1;
  overflow: hidden;
  margin-right: 30rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
}

.fb-right .r-left {
  padding: 22rpx 0;
  flex: 1;
  border-radius: 36rpx;
  background: #FEA715;
  margin-right: 20rpx;
}

.fb-right .r-right {
  padding: 22rpx 0;
  flex: 1;
  border-radius: 36rpx;
  background: linear-gradient(to right, #1BE2DB, #009EBB);
}

.cart {
  position: relative;
}
.contact {
  position: relative;
  overflow: hidden;
}

.contact button {
  position: absolute;
  opacity: 0;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.cart .abs {
  position: absolute;
  top: 0;
  right: -4rpx;
  font-size: 24rpx;
  color: #D61718;
  border-radius: 20rpx;
  border: 2px solid #D61718;
  line-height: 1;
  padding: 2rpx 4rpx;
  font-weight: bold;
  min-width: 36rpx;
  text-align: center;
}

.xiajia {
  color: gray;
  text-align: center;
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
}

.product-video {
  position: absolute;
  top: 0;
  left: 0;
}

.main-width {
  width: 100%;
  overflow-x: hidden;
}