page {
  background-color: #fff;
}

.page-user-list {
  padding: 0 30rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #E5E5E5;
  font-size: 32rpx;
  color: #191919;
}

.page-user-list .avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.page-user-list .avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.occupation {
  color: #999999;
  font-size: 24rpx;
}

.no-fans {
  text-align: center;
  font-size: 32rpx;
  padding: 60px 0;
}