page {
  background-color: #fff;
}

.p {
  width: 105px;
  text-align: center;
  font-size: 17px;
  padding: 20rpx 0;
}

.upload-cert {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  background-color: #fff;
}

.upload-cert .item {
  width: 330rpx;
  background-color: #E0F9F9;
  border-radius: 10rpx;
  overflow: hidden;
}

.upload-cert .item .img {
  padding: 24rpx 38rpx;
}

.upload-cert .item .img image {
  width: 252rpx;
  height: 160rpx;
}

.upload-cert .item .p-btn {
  padding: 20rpx 0;
  text-align: center;
  line-height: 1;
  background-color: #22D2D2;
  font-size: 30rpx;
  color: #fff;
}

.bottom {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}

.bottom .text {
  font-size: 28rpx;
  color: #878787;
  padding: 24rpx 30rpx;
  background-color: #fff;
}

.bottom .btn {
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: #00CFD2;
  line-height: 1;
  padding: 32rpx 0;
}

.row {
  padding: 32rpx;
  font-size: 32rpx;
}

.row .item {
  display: flex;
  align-items: center;
  color: #000;
  margin-bottom: 60rpx;
}

.row .item > view:first-of-type {
  width: 230rpx;
}

.row .item > view:last-of-type {
  color: #242424;
}

.row .status {
  margin-top: 100rpx;
  text-align: center;
  color: #19A0FF;
}

.row .success {
  display: flex;
  align-items: center;
  margin-bottom: 50rpx;
  padding: 24rpx 32rpx;
  background-color: #F4FFFF;
  border: 1px solid #99EDED;
  border-radius: 4rpx;
}

.row .success image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.fail {
  padding: 80rpx 40rpx 40rpx;
  font-size: 30rpx;
  color: #191919;
}

.fail .img {
  text-align: center;
}

.fail .img image {
  width: 52rpx;
  height: 50rpx;
  box-sizing: content-box;
  padding: 34rpx;
  background-color: #EF5407;
  border-radius: 50%;
}

.fail .text {
  margin: 60rpx 0 150rpx;
}

.fail .re {
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  padding: 40rpx 0;
  background-color: #00d1d3;
  border-radius: 56rpx;
  line-height: 1;
}