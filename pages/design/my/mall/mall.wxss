page {
  background-color: #f4f4f4;
}
.page-content {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
}

.top {
  background-color: #ffffff;
  background-size: 100% auto;
  background-repeat: repeat-y;
  /* 从这里往上为设置自定义导航栏 */
  padding-bottom: 42.66%;
}

.mian-content {
  position: absolute;
  width: 100%;
  left: 0;
  top: 160rpx;
}


.t1 {
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.t1 .t1-content {
  padding-bottom: 30rpx;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 20rpx; 
}

.t1-content .user-info {
  display: flex;
  align-items: center;
  line-height: 1;
  color: #B38145;
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx 20rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #F9E9D0;
}

.t1-content .user-info .avatar {
  width: 115rpx;
  height: 115rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.t1-content .user-info .avatar .img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.t1-content .links {
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  color: #B38145;
  text-align: center;
}

.t1-content .links image {
  width: 40rpx;
  vertical-align: middle;
}

.t1-content .links .text {
  margin-top: 20rpx;
  line-height: 1;
}

.t2 {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 28rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.t2 .t2-item {
  text-align: center;
  flex: 1;
}

.t2 .t2-item .icon {
  width: 50rpx;
  vertical-align: middle;
}

.t2 .t2-item .text {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #303030;
}

.t3 {
  background-color: #fff;
  color: #303030;
  font-size: 30rpx;
  border-radius: 20rpx;
  overflow-x: hidden;
}

.t3 .asusume {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  border-bottom: 1px solid #F5F5F5;
}

.t3 .asusume .title {
  color: #303030;
  font-size: 28rpx;
  font-weight: bold;
}

.t3 .asusume .more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #878787;
  font-weight: bold;
}

.t3 .scroll-view {
  height: 280rpx;
}

.t3 .goods-list {
  display: inline-flex;
  padding: 30rpx 28rpx;
}

.t3 .goods-list .goods-item {
  font-size: 24rpx;
  font-weight: bold;
  color: #00D1D3;
  text-align: center;
  display: inline-block;
  margin-right: 20rpx;
}

.t3 .goods-list .goods-item .cover {
  width: 180rpx;
  height: 180rpx;
  background-color: lightblue;
  background-repeat: no-repeat;
  background-size: cover;
  margin-bottom: 16rpx;
  border-radius: 10rpx;
}

.t3 .goods-list .goods-item:last-of-type {
  margin-right: 0;
}