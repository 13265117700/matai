page {
  background-color: #f3f3f3;
  padding-bottom: 110rpx;
}

.page-content {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
}

.top {
  background-color: #122F3D;
  background-size: 100% auto;
  background-repeat: repeat-y;
  /* 从这里往上为设置自定义导航栏 */
  padding-top: 130rpx;
  padding-bottom: 140rpx;
}

.top .order-status {
  color: #fff;
  font-size: 36rpx;
}

.top .order-status .wait {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.top .order-status .wait image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.top .order-status .pay-price {
  text-align: center;
  font-size: 24rpx;
}

.top .order-status .pay-price text {
  font-size: 36rpx;
}

.top .to-pay {
  text-align: center;
  margin-top: 20rpx;
}

.top .to-pay .pay-btn {
  display: inline-block;
  padding: 18rpx 60rpx;
  background-color: #fff;
  color: #00d1d3;
  font-size: 30rpx;
  line-height: 1;
  border-radius: 32rpx;
}

/* 内部部分 */
.content {
  width: 100%;
  min-height: 100px;
  background-color: #f3f3f3;
  border-radius: 20rpx 20rpx 0 0;
  position: absolute;
  overflow: hidden;
  top: 80%;
  padding-bottom: 200rpx;
}

.content-list {
  padding: 40rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.content-list .cover {
  width: 210rpx;
  height: 144rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.content-list .cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.content-list .info {
  /* 为什么要在flex为1的容器中添加一个overflow呢? */
  flex: 1;
  overflow: hidden;
}

.content-list .info .title {
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content-list .info .price {
  font-size: 34rpx;
  font-weight: 400;
}

.order-info {
  background-color: #fff;
  font-size: 28rpx;
  color: #191919;
  padding: 40rpx;
}

.order-info>view:not(:last-of-type) {
  margin-bottom: 20rpx;
}

.order-info text {
  font-weight: bold;
}

.total-price {
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #191919;
  padding: 40rpx;
}

.total-price .t-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.total-price .t-price:last-of-type {
  margin-bottom: 0;
}

/* .total-price .t-price text {
  font-weight: bold;
} */

.total-price .payed {
  text-align: right;
  margin-top: 20rpx;
}

.total-price .payed text {
  font-size: 36rpx;
  color: #00d1d3;
}

.total-price .payed text::first-letter {
  font-size: 24rpx;
}

.go-to-pay {
  text-align: center;
  color: #fff;
  background-color: #00d1d3;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 30rpx 0;
  font-size: 32rpx;
}

.address {
  background-color: #fff;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #191919;
  font-weight: bold;
  padding: 30rpx 30rpx 30rpx 60rpx;
}

.address .address-text {
  color: #545454;
  font-size: 26rpx;
  font-weight: normal;
  margin-top: 10rpx;
}