.avatar {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  font-size: 30rpx;
  color: #000;
  margin: 40rpx 0 20rpx;
}

.avatar .face-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.avatar .face-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* bottom */
.bottom {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}

.bottom .text {
  font-size: 28rpx;
  color: #878787;
  padding: 24rpx 30rpx;
  background-color: #fff;
}

.bottom .btn {
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: #00CFD2;
  line-height: 1;
  padding: 32rpx 0;
}
