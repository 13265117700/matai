page {
  background: linear-gradient(to right, #00D1D3, #009EBB);
}

.content {
  position: absolute;
  width: 100%;
  height: 84%;
  bottom: 0;
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
  padding: 48rpx 48rpx 120rpx;
  font-size: 28rpx;
  color: #191919;
}

.content .t1 {
  font-size: 28rpx;
}

.content .t2 {
  display: flex;
  align-items: center;
  font-size: 50rpx;
  border-bottom: 1px solid #EEEEEE;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
}

.content .t2 .input {
  flex: 1;
  height: 98rpx;
  line-height: 50rpx;
  font-size: 50rpx;
  padding-left: 10rpx;
}

.content .t3 {
  color: #00d1d3;
  font-size: 24rpx;
  margin-bottom: 48rpx;
}

.content .t4 {
  display: flex;
  align-items: center;
}

.content .t4>view {
  background-color: #fff;
  width: 136rpx;
  padding: 26rpx 0;
  text-align: center;
  line-height: 1;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
  margin-right: 20rpx;
  border: 2px solid #999;
}

.content .t4>view.active {
  background-color: #00d1d3;
  color: #fff;
  border-color: #00d1d3;
}

/* f-bottom */

.f-bottom {
  position: fixed;
  border-top: 1px solid #E5E5E5;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 16rpx 50rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.f-bottom .price {
  font-size: 30rpx;
}

.f-bottom .price text {
  margin-left: 10rpx;
  font-size: 38rpx;
  color: #00d1d3;
}

.f-bottom .btn {
  padding: 22rpx 70rpx;
  background: linear-gradient(to right, #00D1D3, #009EBB);
  color: #fff;
  font-size: 38rpx;
  line-height: 1;
  border-radius: 40rpx;
}
