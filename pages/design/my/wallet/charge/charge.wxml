<navBar background='linear-gradient(to right, #00D1D3, #009EBB)' iconTheme="white" color="#ffffff" back="{{true}}" bindback="back">
	<view slot="center">余额充值</view>
</navBar>

<view class="content">
	<view class="t1">
		提现金额
	</view>
	<view class="t2">
		<view>￥</view><input class="input" bindinput="formInputChange" data-field="price" value="{{form.price}}" type="digit" maxlength="8" placeholder="请输入充值金额"></input>
	</view>
	<view class="t3">注：充值的余额不能用于提现</view>
	<view class="t4">
		<view wx:for="{{list}}" class="{{index === active ? 'active' : ''}}" wx:key="price" data-index="{{index}}" bindtap="tagChange">{{item.price}}元</view>
	</view>

	<view class="f-bottom">
		<view class="price">
			充值金额 <text>￥{{ form.price || 0 }}</text>
		</view>
		<view class="btn" bindtap="doCharge">
			充值
		</view>
	</view>
</view>