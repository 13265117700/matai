<navBar background='linear-gradient(to right, #00D1D3, #009EBB)' iconTheme="white" color="#ffffff" back="{{true}}" bindback="back">
  <view slot="center">提现明细</view>
</navBar>

<view class="order">
	<!-- tab 标签栏 -->
	<view class="page-section">
		<scroll-view class="scroll-view-tabs" scroll-x="true" style="width: 100%">
			<view wx:for="{{ tabs }}" wx:key="id" class="scroll-view-tab {{ currentTab === item.name ? 'main-color' : '' }}" bindtap="tabChange" data-name="{{ item.name }}" data-status="{{item.status}}">
				{{ item.name }}
			</view>
		</scroll-view>
	</view>
	<!-- 订单列表 -->
	<view class="order-list">
    <!-- item -->
    <view wx:for="{{list}}" wx:key="id" class="list-item">
      <view class="t1">
        <text>提现</text>
        <text class="price">+￥{{item.withdrawalAmount}}</text>
      </view>
      <view class="t2">
        <text>{{item.createTime}}</text>
        <text wx:if="{{item.status == 1}}" class="status{{item.status}}">提现进行中</text>
        <text wx:if="{{item.status == 2}}" class="status{{item.status}}">提现失败</text>
        <text wx:if="{{item.status == 3}}" class="status{{item.status}}">提现成功</text>
      </view>
    </view>
    <!-- item end -->
    <noContent wx:if="{{ !list.length && showNoData }}" />
	</view>
</view>