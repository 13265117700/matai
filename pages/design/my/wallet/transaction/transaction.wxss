@import "../txLog/txLog.wxss";

.order-list {
  padding: 20rpx;
}

.list-item2 {
  display: flex;
  padding: 20rpx 0;
}

.list-item2 .t1 {
  width: 76rpx;
  height: 76rpx;
  margin-right: 20rpx;
}

.list-item2 .t1 image {
  width: 100%;
  height: 100%;
}

.list-item2 .t2 {
  overflow: hidden;
  flex: 1;
  display: flex;
  padding-bottom: 30rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #E5E5E5;
}

.list-item2 .t2 .left {
  flex: 1;
  font-size: 30rpx;
  color: #191919;
  line-height: 1;
  overflow: hidden;
}

.list-item2 .t2 .left .title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.list-item2 .t2 .left text {
  font-size: 24rpx;
  color: #999999;
}

.list-item2 .t2 .right {
  width: 180rpx;
  text-align: right;
  color: #191919;
  font-size: 32rpx;
  font-weight: bold;
}

.list-item2 .t2 .right.plus {
  color: #00d1d3;
}