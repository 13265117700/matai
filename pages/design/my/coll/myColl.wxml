<!-- 自定义导航栏 -->
<navBar background='linear-gradient(to right, #00D1D3, #009EBB)' iconTheme="white" color="#ffffff" title="我的收藏" back="{{true}}" bindback="back"></navBar>
<view class="page-content">
  <!-- top end -->
  <view class="content">
    <!-- 数量结束 -->
    <view class="tag">
      <view class="{{tag == '作品' ? 'active' : ''}}" data-name="作品" bindtap="tagClick">作品</view>
      <view class="{{tag == '专辑' ? 'active' : ''}}" data-name="专辑" bindtap="tagClick">专辑</view>
    </view>
    <!-- 作品列表 -->
    <view class="design-row" hidden="{{tag !== '作品'}}">
      <block wx:if="{{designList.length}}">
        <view class="design-list">
          <view wx:for="{{designList}}" wx:key="id" class="item" bindtap="goPath" data-path="/pages/design/info/info?id={{item.csDesignWorks.id}}">
            <view class="cover" style="background-image: url('{{item.csDesignWorks.thumbnail}}');"></view>
            <view class="title">{{ item.csDesignWorks.name }}</view>
          </view>
        </view>
        <c-list-no-more wx:if="{{!designCanDown}}" />
      </block>
      <block wx:else>
        <view class="no-list">
          <image class="empty-img" src="http://csyimg.oss-cn-shenzhen.aliyuncs.com/images/2020/07/09/15942821511459446.png" mode="widthFix"></image>
          <view class="no-data">暂无收藏的作品</view>
        </view>
      </block>
    </view>
    <!-- 专辑列表 -->
    <view class="design-row" hidden="{{tag !== '专辑'}}">
      <view wx:if="{{albumList.length}}" class="design-list">
        <view wx:for="{{albumList}}" wx:key="id" class="item" bindtap="goPath" data-path="/pages/design/album/album?id={{item.csAlbum.id}}">
          <view class="cover" style="background-image: url('{{item.csAlbum.pushHomeThumbnails}}');"></view>
          <view class="title">{{ item.csAlbum.name }}</view>
        </view>
      </view>
      <view wx:else class="no-list">
        <image class="empty-img" src="http://csyimg.oss-cn-shenzhen.aliyuncs.com/images/2020/07/09/15942821511459446.png" mode="widthFix"></image>
        <view class="no-data">收藏的专辑为空~</view>
      </view>
    </view>
  </view>
  <!-- content 结束 -->
</view>