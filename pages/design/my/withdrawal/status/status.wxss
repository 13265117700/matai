page {
  background: #F7F4F8;
}

.tx-content {
  margin: 40rpx 50rpx;
  background-color: #fff;
  padding: 72rpx 0 20rpx;
}

.tx-content>view {
  margin: 0 34rpx;
}

.status {
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
  color: #666666;
  padding-bottom: 66rpx;
  border-bottom: 1px dashed #DCDCDC;
  position: relative;
}

.status::before,
.status::after {
  content: '';
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  background-color: #F7F4F8;
  bottom: -34rpx;
  border-radius: 50%;
}

.status::before {
  left: -68rpx;
}

.status::after {
  right: -68rpx;
}

.status image {
  width: 158rpx;
  height: 158rpx;
}

.status .status-text {
  color: #191919;
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0 30rpx;
}

/* info */
.info {
  padding: 40rpx 0 0;
  font-size: 30rpx;
  color: #191919;
}

.info>view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info>view text:nth-of-type(2) {
  color: #666666;
}