page {
  background-color: #F3F3F3;
}

/* tabbar */
.page-section {
  background-color: #fff;
  position: relative;
}
 
.scroll-view-tabs {
  white-space: nowrap;
}

.scroll-view-tab {
  display: inline-block;
  padding: 30rpx;
  margin-right: 14rpx;
  line-height: 1;
  color: #454545;
  font-size: 28rpx;
  position: relative;
}

.scroll-view-tab::after {
  content: '';
  position: absolute;
  left: 50%;
  margin-left: -12rpx;
  bottom: 10rpx;
  width: 24rpx;
  height: 6rpx;
  background: transparent;
  border-radius: 6rpx;
}

.scroll-view-tab.main-color {
  font-size: 34rpx;
  font-weight: bold;
}

.scroll-view-tab.main-color::after {
  background: rgba(0, 209, 211, 1);
}

/* tabbar end */

.order-list  {
  margin-top: 20rpx;
}

.order-list .item {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20px;
  padding: 40rpx;
  color: #191919;
  font-size: 28rpx;
  font-weight: bold;
}

.order-list .item .order-num {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.order-list .item:last-of-type{
  border-bottom: 0;
}

.order-list .item .content {
  display: flex;
  align-items: center;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.order-list .item .content:last-of-type {
  margin-bottom: 0;
}

.order-list .item .content .cover {
  width: 210rpx;
  height: 144rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.order-list .item .content .cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.order-list .item .content .info {
  /* 为什么要在flex为1的容器中添加一个overflow呢? */
  flex: 1;
  overflow: hidden;
}

.order-list .item .content .info .title {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.order-list .item .content .info .price {
  font-size: 34rpx;
  font-weight: 400;
}

.order-list .item .status {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 40rpx;
}

.order-list .item .status .tool {
  padding: 14rpx 30rpx;
  font-size: 26rpx;
  color: #333;
  font-weight: normal;
  margin-left: 30rpx;
  border: 1px solid #333;
  border-radius: 26rpx;
  line-height: 1;
}

.order-list .item .status .tool.pay {
  border-color: #00d1d3;
  color: #00d1d3;
}

