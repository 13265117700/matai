page {
  background-color: #f3f3f3;
}

.top {
  height: 320rpx;
  background: linear-gradient(to right, #00D1D3, #009EBB);
  padding-top: 40rpx;
  position: relative;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}

.user-info .l {
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
  border: 2px solid #ffffff;
}

.user-info .l .face-image {
  width: 100%;
  height: 100%;
}

.user-info .r {
  color: #fff;
  font-size: 32rpx;
  flex: 1;
  line-height: 1;
}

.user-info .r .nick-name {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  font-weight: bold;
}

.user-info .r .nick-name text {
  margin-right: 20rpx;
}

.user-info .r .nick-name .vip-icon {
  display: flex;
  align-items: flex-start;
  line-height: 1;
  background: linear-gradient(to right, #F4D4A0, #D6AC6A);
  border-radius: 4rpx;
  padding: 4rpx 10rpx 0 4rpx;
}

.user-info .r .nick-name .vip-icon .vip-text {
  font-size: 18rpx;
  font-weight: bold;
  margin-left: 0;
  margin-right: 0;
  line-height: 1;
  position: relative;
  top: 2rpx;
}

.user-info .r .nick-name .vip-icon image {
  width: 26rpx;
  display: block;
}

.user-info .r .address {
  font-size: 24rpx;
}

.user-info .r .f {
  margin-right: 40rpx;
  position: relative;
}

.user-info .r text {
  font-size: 32rpx;
  line-height: 32rpx;
}

.user-info .r .f::after {
  content: '';
  position: absolute;
  width: 2rpx;
  height: 24rpx;
  background-color: #83D2D9;
  right: -20rpx;
  top: 12rpx;
}

.user-info .r .address {
  font-size: 24rpx;
}

.numbers-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 0 30rpx 0 30rpx;
  color: #DAFFFF;
}

.numbers-bar>view {
  flex: 1;
  text-align: center;
}

.numbers-bar .fans {
  position: relative;
}

.numbers-bar .fans::before {
  content: '';
  position: absolute;
  left: 0;
  top: 24rpx;
  width: 2rpx;
  height: 20rpx;
  background-color: #83D2D9;
}

.numbers-bar .fans::after {
  content: '';
  position: absolute;
  right: 0;
  top: 24rpx;
  width: 2rpx;
  height: 20rpx;
  background-color: #83D2D9;
}

.numbers-bar>view text {
  color: #ffffff;
  font-size: 38rpx;
}

.top .sign {
  position: absolute;
  top: 40rpx;
  right: 0;
  width: 144rpx;
  height: 160rpx;
}

.top .sign .tab {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: #fff;
  border-radius: 36rpx 0 0 36rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #00d1d3;
  line-height: 1;
}

.top .sign .tab .sign-in {
  color: #FF4A3B;
}

.top .sign .tab image {
  width: 28rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

/* tools list */
.tools-list {
  display: flex;
  align-items: flex-end;
  flex-wrap: wrap;
  background-color: #ffffff;
  padding: 18rpx 0;
  margin-bottom: 20rpx;
}

.tools-list .item {
  width: 25%;
  padding: 32rpx 0;
  text-align: center;
}

.tools-list .item .icon {
  width: 100%;
  margin-bottom: 20rpx;
  text-align: center;
}

.tools-list .item .icon image {
  width: 42rpx;
}

.tools-list .item .text {
  font-size: 24rpx;
  line-height: 1;
  color: #000000;
}

/* link list */
.link-list {
  padding: 0 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.link-list .item {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #F6F6F6;
  position: relative;
}

.link-list .item .icon {
  width: 42rpx;
  margin-right: 28rpx;
}

.link-list .item .icon image {
  width: 100%;
  display: block;
}

.link-list .item .text {
  font-size: 28rpx;
  line-height: 1;
  color: #000000;
}


.link-list .item .arrow {
  position: absolute;
  right: 0;
  top: 24rpx;
}

.link-list .title {
  padding: 22rpx 30rpx 22rpx 0;
  font-weight: bold;
}

.other-list {
  margin-bottom: 0;
}


/* 弹出层 */
.kf {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  z-index: 999999;
}

.kf .cover-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  left: 0;
  top: 0;
}

.kf .kf-container {
  position: absolute;
  width: 100%;
  bottom: -400rpx;
  left: 0;
  background-color: #f5f5f5;
  transition: all linear .2s;
}

.kf .kf-container.show {
  bottom: 0;
}

.kf .kf-list {
  padding: 0 30rpx;
  background-color: #fff;
  font-size: 24rpx;
  color: #191919;
  margin-bottom: 20rpx;
}

.kf .kf-list .kf-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}

.kf .kf-list .kf-item:last-of-type {
  border-width: 0;
}

.kf .cancel-btn {
  padding: 20rpx;
  background-color: #fff;
}

.kf-item.online {
  position: relative;
}

.kf-item.online .contact-btn {
  position: absolute;
  opacity: 0;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}