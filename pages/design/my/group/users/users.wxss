
page {
  background-color: #f3f3f3;
}
/* tabbar */
.page-section {
  background-color: #fff;
  position: relative;
}
 
.scroll-view-tabs {
  white-space: nowrap;
  padding-right: 88rpx;
}

.scroll-view-tab {
  width: 50%;
  display: inline-block;
  text-align: center;
  padding: 30rpx;
  box-sizing: border-box;
  margin-right: 14rpx;
  line-height: 1;
  color: #454545;
  font-size: 28rpx;
  position: relative;
}

.scroll-view-tab::after {
  content: '';
  position: absolute;
  left: 50%;
  margin-left: -12rpx;
  bottom: 10rpx;
  width: 24rpx;
  height: 6rpx;
  background: transparent;
  border-radius: 6rpx;
}

.scroll-view-tab.main-color {
  font-size: 28rpx;
  font-weight: bold;
}

.scroll-view-tab.main-color::after {
  background: rgba(0, 209, 211, 1);
}


/* list */
.list {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  min-height: calc(100vh - 108rpx);
}

.item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
  padding: 30rpx 0;
}

.item .left {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
}

.item .left .avatar {
  width: 100%;
  height: 100%;
}

.item .right {
  flex: 1;
}

.item .right .nick-name {
  font-size: 34rpx;
  color: #191919;
  font-weight: 400;
}

.item .right .total-price {
  font-size: 24rpx;
  color: #545454;
}

/* no-list */
.no-list {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  min-height: calc(100vh - 108rpx);
}