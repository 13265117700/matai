.page-content {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  background-color: white;
}

.top {
  background-color: #122F3D;
  background-size: 100% auto;
  background-repeat: repeat-y;
  /* 从这里往上为设置自定义导航栏 */
  height: 300rpx;
  position: relative;
}

.top .numbers {
  padding: 0 30rpx;
  width: 100%;
  position: absolute;
  left: 0;
  top: 160rpx;
}

.top .numbers .m-content {
  background-color: #fff;
  border-radius: 20rpx;
  color: #00ABC1;
  font-size: 30rpx;
  padding: 30rpx;
  box-shadow: 0px 2rpx 8rpx 0px rgba(229, 229, 229, 1);
}

.m-content .t1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.m-content .t1 .share-rule {
  font-size: 24rpx;
}

.m-content .t2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.m-content .t2 .total-price text {
  font-size: 56rpx;
  font-weight: bold;
}

.m-content .t2 .tx {
  padding: 18rpx 26rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 1;
  border-radius: 32rpx;
  background-color: #00D1D3;
}

.m-content .t3 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: bold;
  font-size: 32rpx;
}

.m-content .t3 .t3-item {
  font-size: 24rpx;
  color: #999999;
}

.m-content .t3 .t3-item .t3-number {
  color: #00ABC1;
  font-size: 28rpx;
  font-weight: bold;
}


/* content */

/* tabbar */
.page-section {
  background-color: #fff;
  position: relative;
  border-radius: 0 0 20rpx 20rpx;
}

.scroll-view-tabs {
  white-space: nowrap;
  padding-right: 88rpx;
}

.scroll-view-tab {
  width: 50%;
  display: inline-block;
  text-align: center;
  padding: 30rpx;
  box-sizing: border-box;
  margin-right: 14rpx;
  line-height: 1;
  color: #454545;
  font-size: 28rpx;
  position: relative;
}

.scroll-view-tab::after {
  content: '';
  position: absolute;
  left: 50%;
  margin-left: -30rpx;
  bottom: 10rpx;
  width: 60rpx;
  height: 6rpx;
  background: transparent;
  border-radius: 6rpx;
}

.scroll-view-tab.main-color {
  font-size: 28rpx;
  font-weight: bold;
}

.scroll-view-tab.main-color::after {
  background: rgba(0, 209, 211, 1);
}


/* list */
.content {
  position: relative;
  top: 180rpx;
  background-color: #fff;
  padding-bottom: 150rpx;
}

.list {
  margin-top: 20rpx;
  border-radius: 20rpx 20rpx 0 0;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  min-height: calc(100vh - 108rpx);
}

.item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
  padding: 30rpx 0;
}

.item .left {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
}

.item .left .avatar {
  width: 100%;
  height: 100%;
}

.item .right {
  flex: 1;
}

.item .right .nick-name {
  font-size: 34rpx;
  color: #191919;
  font-weight: 400;
}

.item .right .total-price {
  font-size: 24rpx;
  color: #545454;
}

/* no-list */
.no-list {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}

/* fixebottom */
.fxb-content {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  padding: 30rpx;
  background-color: #fff;
}

.share-banner {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  background-repeat: no-repeat;
  background-size: cover;
}