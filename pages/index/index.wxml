<!--index.wxml-->
<view class="page-home">
    <view class="banner-section">
        <vtu-swiper 
            list="{{imageList}}" 
            height="{{(windowWidth-40)/2}}px" 
            dot-type="round" 
            indicator-active-color="#3fe816" 
            swiper-class="swiperClass" 
            indicator-dots="{{true}}" 
            current="{{current}}" 
            bind:change="bindChange"></vtu-swiper>
    </view>
    <view class="card-section">
        <view class="card-list">
            <view
                class="card-item"
                wx:for="{{cardList}}"
                wx:key="index">
                <image src="{{item.url}}"></image>
                <view class="card-item-tag">{{item.text}}</view>
            </view>
            <!-- <view class="card-item">
                <image src="/images/index/huoyuan@3x.png"></image>
            </view>
            <view class="card-item">
                <image src="/images/index/cy@3x.png"></image>
            </view>
            <view class="card-item">
                <image src="/images/index/daolu@3x.png"></image>
            </view> -->
        </view>
    </view>
    <view class="service-section">
        <vtu-grids col="4">
            <vtu-grid label="图片" icon="iconfont icon-tupian1" icon-color="red" bind:click="click" data-label="aa" ></vtu-grid>
            <vtu-grid label="清除" icon="iconfont icon-qingkong" icon-color="orange" bind:click="click" data-label="bb" ></vtu-grid>
            <vtu-grid label="收藏" icon="iconfont icon-xihuanfill" icon-color="skyblue" bind:click="click" data-label="cc" ></vtu-grid>
            <vtu-grid label="上传" icon="iconfont icon-shangchuan" icon-color="blue" bind:click="click" data-label="dd" ></vtu-grid>
            <vtu-grid label="图片" icon="iconfont icon-tupian1" icon-color="#7e35bd" bind:click="click" data-label="ee" ></vtu-grid>
            <vtu-grid label="清除" icon="iconfont icon-sousuo" icon-color="#9075fc" bind:click="click" data-label="gg" ></vtu-grid>
            <vtu-grid label="收藏" icon="iconfont icon-biaoxingfill" icon-color="#1abf28" bind:click="click" data-label="er" ></vtu-grid>
            <vtu-grid label="上传" icon="iconfont icon-yuanxingxuanzhongfill" icon-color="#fc973d" bind:click="click" data-label="sd" ></vtu-grid>
        </vtu-grids>
    </view>
    <view class="order-section">
        <view class="order-crumbs">
            <view class="order-title">订单跟踪</view>
            <view class="order-tag">查看更多订单<image src="/images/index/order-tag3.png"></image></view>
        </view>
        <view class="order-list">
            <view class="order-item">
                <view class="order-item-top">
                    <view class="order-item-img">
                        <image src="/images/index/order_img3.png"></image>
                    </view>
                    <view class="order-item-info">
                        <view class="order-item-info item-summary">
                            <view class="order-item-info item-summary_name">粤清远货3888</view>
                            <view class="order-item-info item-summary_amount">煤炭  2000吨</view>
                        </view>
                        <view class="order-item-info item-msg">
                            <view class="order-item-info item-msg_process">
                                <view class="order-item-info item-msg_process begin">广州黄埔装货港</view>
                                <view class="order-item-info item-msg_process img"><image src="/images/index/order-item_direction3.png"></image></view>
                                <view class="order-item-info item-msg_process end">珠海大湾区目的港</view>
                            </view>
                            <view class="order-item-info item-msg_time">2020-03-26</view>
                        </view>
                    </view>
                </view>
                <view class="order-item-lower">
                    <view class="order-item-lower_info"><image src="/images/index/order-lower_info3.png"></image>船已到装货港</view>
                    <view class="order-item-lower_seat">
                        <image src="/images/index/order-lower_seat3.png"></image>
                    </view>
                </view>
            </view>
            <view class="order-item">
                <view class="order-item-top">
                    <view class="order-item-img">
                        <image src="/images/index/order_img3.png"></image>
                    </view>
                    <view class="order-item-info">
                        <view class="order-item-info item-summary">
                            <view class="order-item-info item-summary_name">粤清远货3888</view>
                            <view class="order-item-info item-summary_amount">煤炭  2000吨</view>
                        </view>
                        <view class="order-item-info item-msg">
                            <view class="order-item-info item-msg_process">
                                <view class="order-item-info item-msg_process begin">广州黄埔装货港</view>
                                <view class="order-item-info item-msg_process img"><image src="/images/index/order-item_direction3.png"></image></view>
                                <view class="order-item-info item-msg_process end">珠海大湾区目的港</view>
                            </view>
                            <view class="order-item-info item-msg_time">2020-03-26</view>
                        </view>
                    </view>
                </view>
                <view class="order-item-lower">
                    <view class="order-item-lower_info"><image src="/images/index/order-lower_info3.png"></image>船已到装货港</view>
                    <view class="order-item-lower_seat">
                        <image src="/images/index/order-lower_seat3.png"></image>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
