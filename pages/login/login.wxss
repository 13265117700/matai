.page-header{
    text-align: center;
    margin-top: 20px;
    margin-bottom: 70px;
}

.header-image{
    width: 59.5px;
    height: 60.5px;
    margin-bottom: 12.5px;
}

.header-title{
    font-size: 19px;
    font-family: PingFang-SC-Bold;
    font-weight: Bold;
    margin-bottom: 9.5px;
    color: #000000;
}

.header-describe{
    font-size: 15px;
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #555555;
}
.from-password navigator{
    color: #CD1F38;
    width: 328px;
    margin: 9.5px auto 0;
    font-size: 12px;
}
.form-item{
    display: flex;
    height: 43px;
    line-height: 43px;
    width: 328px;
    margin: 0 auto;
    border-bottom: 1px solid #E6E6E6;
}
.form-item .label{
    font-size: 18px;
    margin-right: 40px;
    color: #000000;
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
}
.form-item input{
    height: 43px;
    width: 100%;
}
.form-item .input-pl{
    font-size: 16px;
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #999999;
}

.from-button{
    width: 328px;
    margin: 40px auto 60px;
    text-align: center;
}
.from-button .phone-button button{
    width: 100%;
    margin-bottom: 22px;
    
}
.from-button .password-button button{
    width: 100%;
    margin-bottom: 22px;
}

.page-footer{
    position: absolute;
    text-align: center;
    bottom: 10px;
    width: 328px;
    left: 50%;
    transform: translateX(-50%)
}

/* .page-footer{
    width: 328px;
    margin: 0 auto;
    text-align: center;
} */
.page-footer .footer-guide{
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    color: #999999;
    font-size: 15px;
    position: relative;
}
.page-footer .footer-guide::after{
    content: '';
    width: 41px;
    height: 1px;
    background-color: #E5E5E5;
    position: absolute;
    left: 15%;
    top: 50%;
    /* transform: translateX(-50%); */
}
.page-footer .footer-guide::before{
    content: '';
    width: 41px;
    height: 1px;
    background-color: #E5E5E5;
    position: absolute;
    right: 15%;
    top: 50%;
}
.page-footer .forrter-button button{
    width: 100%;
    margin: 20px 0 24px 0;
}
.page-footer .footer-explain{
    font-family: PingFang-SC-Medium;
    font-weight: Medium;
    font-size: 13px;
    color: #555555;
    display: flex;
    justify-content: center;
}