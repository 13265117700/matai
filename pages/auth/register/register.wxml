<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<view class="page">
	<view class="page__bd">
		<view class="m-title">手机号注册</view>
		<mp-form id="form" rules="{{rules}}" models="{{formData}}">		
			<mp-cells title="">
				<mp-cell prop="nickName" show-error title="用户昵称" ext-class="">
					<input bindinput="formInputChange" data-field="nickName" class="weui-input" placeholder="请输入昵称" />
				</mp-cell>
			</mp-cells>
			<mp-cells title="">
				<mp-cell prop="phone" show-error title="手机号" ext-class="">
					<input bindinput="formInputChange" maxlength="11" data-field="phone" class="weui-input" placeholder="请输入手机号" />
				</mp-cell>
			</mp-cells>
			<mp-cells title="">
				<mp-cell prop="password" show-error title="登录密码" ext-class="">
					<input bindinput="formInputChange" type="password" data-field="password" class="weui-input" placeholder="请输入密码" />
				</mp-cell>
			</mp-cells>
			<mp-cells>
				<mp-cell prop="verifyCode" show-error title="验证码" ext-class="">
					<input bindinput="formInputChange" type="text" data-field="verifyCode" class="weui-input" placeholder="请输入验证码" />
					<view slot="footer" class="weui-vcode-btn {{cd ? 'cd' : ''}}" bindtap="getSMS">获取验证码<text wx:if="{{cd}}">{{cd}}</text></view>
				</mp-cell>
			</mp-cells>
		</mp-form>
		<view class="">
			<button class="login-btn" bindtap="submitForm">注册</button>
		</view>
	</view>
</view>
