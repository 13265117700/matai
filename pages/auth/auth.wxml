<view class="top">
	<image class="logo" src="/images/logo.png" mode="widthFix"></image>
</view>
<view class="page">
	<view class="page__bd">
		<mp-form id="form" rules="{{rules}}" models="{{formData}}">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__hd" style="width: 105px">
										<view class="weui-select">+86</view>
                </view>
                <view class="weui-cell__bd weui-cell__bd_in-select-before">
                    <input class="weui-input" maxlength="11" bindinput="formInputChange" data-field="phone" placeholder="请输入手机号" />
                </view>
            </view>
        </view>
		</mp-form>
		<view class="">
			<button class="login-btn {{ formData.phone.length == 11 ? 'active' : '' }}" data-path="./verify-code/verify-code" bindtap="goPath2">获取验证码</button>
		</view>
		<view class="verify">
			<button class="login-btn default" data-path="./psw-login/psw-login" bindtap="goPath">用账号密码登录</button>
		</view>

		<!-- <view class="reg">还没图可图账号？
			<text class="main-color" bindtap="goRegister">去注册</text>
		</view> -->
		<view class="allow">
			<view>推荐使用微信登录</view>
			<view class="verify">
				<button class="login-btn wx" type="primary" open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信一键登录</button>
			</view>
			<view class="sub-text">
				登录注册即表示同意 <text bindtap="goPath" data-path="./rule/rule">用户协议、隐私条款</text>
			</view>
		</view>
	</view>
</view>
