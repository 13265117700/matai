<view class="top">
	<image class="logo" src="/images/logo.png" mode="widthFix"></image>
</view>
<view class="page">
	<view class="page__bd">
		<mp-form id="form" rules="{{rules}}" models="{{formData}}">
			<mp-cells title="">
				<!-- <mp-cell prop="phone" show-error title="手机号" ext-class=" weui-cell_vcode"> -->
				<mp-cell prop="username" show-error title="" ext-class="">
					<input bindinput="formInputChange" data-field="username" class="weui-input" placeholder="请输入手机号" />
					<!-- <view slot="footer" class="weui-vcode-btn">获取验证码</view> -->
				</mp-cell>
				<mp-cell prop="password" show-error title="" ext-class="">
					<input bindinput="formInputChange" type="password" data-field="password" class="weui-input" placeholder="请输入登录密码" />
				</mp-cell>
			</mp-cells>
		</mp-form>

		<view class="forget-password" data-path="../forget-password/forget-password" bindtap="goPath">忘记密码</view>


		<view class="">
			<button class="login-btn {{ formData.username && formData.password ? 'active' : '' }}" bindtap="submitForm">登录</button>
		</view>

		<view class="verify">
			<button class="login-btn default" bindtap="back">用短信验证登录</button>
		</view>

		<!-- <view class="reg">还没图可图账号？
			<text class="main-color" bindtap="goRegister">去注册</text>
		</view> -->
		<view class="allow">
			<view>推荐使用微信登录</view>
			<view class="verify">
				<button class="login-btn wx" type="primary" open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信一键登录</button>
			</view>
			<view class="sub-text">
				登录注册即表示同意 <text bindtap="goPath" data-path="../rule/rule">用户协议、隐私条款</text>
			</view>
		</view>
	</view>
</view>
